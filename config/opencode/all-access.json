{
    "$schema": "https://opencode.ai/config.json",
    "keybinds": {
        "leader": "ctrl+/"
    },
    "permission": {
        "bash": {
            "*": "allow",
            "git push": "deny",
            "git push --force": "deny",
            "git push -f": "deny"
        },
        "edit": "allow",
        "read": "allow",
        "write": "allow",
        "glob": "allow",
        "grep": "allow",
        "webfetch": "allow"
    }
}
