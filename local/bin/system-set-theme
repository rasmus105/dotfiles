#!/bin/bash

export PATH=$PATH:~/.local/bin

notify-send "Setting system theme to ${1}"

if [[ -z $1 && $1 != "CNCLD" ]]; then
    echo "Usage: system-set-theme<theme-name>"
    exit 1
fi

THEMES_DIR="$HOME/.config/themes"
CURRENT_THEME_DIR="$HOME/.config/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
    echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
    exit 1
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

system-update-hyprpaper

# Restart components to apply new theme
system-restart-app swayosd-server
hyprctl reload 2>/dev/null
pkill -SIGUSR2 btop 2>/dev/null
makoctl reload 2>/dev/null

system-update-terminal-theme
system-update-gnome-theme
system-update-nvim-theme
# system-update-browser-theme
