## Basic Options
shell-integration = zsh
font-family = Hack
theme = GruvboxDark
mouse-hide-while-typing = true
# 0.5 GB
scrollback-limit = 536870912 

## General Options 
# Misc
keybind = super+r=reload_config

window-save-state = always

window-decoration = none
gtk-tabs-location = hidden

resize-overlay = never

window-new-tab-position = end

## Keybinds
# Unbinding
keybind = ctrl+enter=unbind
keybind = ctrl+tab=unbind

# Misc
keybind = super+q=close_surface

keybind = super+t=toggle_quick_terminal

keybind = super+o=toggle_tab_overview

# Panes
keybind = super+h=goto_split:left
keybind = super+j=goto_split:bottom
keybind = super+k=goto_split:top
keybind = super+l=goto_split:right

keybind = super+v=new_split:right
keybind = super+s=new_split:down

keybind = super+f=toggle_split_zoom

keybind = super+equal=equalize_splits

# Tabs
keybind = super+n=new_tab

keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5
keybind = super+6=goto_tab:6
keybind = super+7=goto_tab:7
keybind = super+8=goto_tab:8
keybind = super+9=goto_tab:9

keybind = super+]=next_tab
keybind = super+[=previous_tab

# Scrolling
# keybind = ctrl+up=scroll_page_up
# keybind = ctrl+down=scroll_page_down
keybind = super+u=scroll_page_fractional:-0.5
keybind = super+d=scroll_page_fractional:0.5

# Command palette
keybind = super+p=toggle_command_palette
